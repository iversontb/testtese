.ares-slider {
    position: relative;
    height: 60px;
    margin: 0px;
    padding: 0 50px;
}
.ares-slider > ul {
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: absolute;
    top: 0;
    left: 50px;
}
.ares-slider_item {
    position: absolute;
    left: -1000px;
}
.ares-slider_item > img {
    width: 100%;
}
.ares-slider_item > h3{
    color: #3c444e;
    font-size: 14px;
}
.ares-slider_item dl {
    overflow: hidden;
}
.ares-slider_item  dt,
.ares-slider_item dd{
    float: left;
}
.ares-slider_item dt {
    clear: both;
}
.sprite-left-hover{ background-position: 0 0; width: 38px; height: 37px; }
.sprite-left{ background-position: 0 -87px; width: 38px; height: 37px; }
.sprite-right-hover{ background-position: 0 -174px; width: 38px; height: 37px; }
.sprite-right{ background-position: 0 -261px; width: 38px; height: 37px; }

.ares-slider__next{
    position: absolute;
    content: '';
    background: url("../img/gall-sprite.png") 0 -261px;
    width: 38px;
    height: 37px;
    top: 50%;
    margin-top: -20px;
    right: 0;
    cursor: pointer;
}
.ares-slider__prev {
    position: absolute;
    content: '';
    background: url("../img/gall-sprite.png")  0 -87px;
    width: 38px;
    height: 37px;
    top: 50%;
    margin-top: -20px;
    left: 0;
    cursor: pointer;
}

.ares-slider__next:hover{
    background: url("../img/gall-sprite.png") 0 -174px;
}
.ares-slider__prev:hover{
    background: url("../img/gall-sprite.png") 0 0;
}
.imgwrap{
    display: table-cell;
    vertical-align: middle;
    height: 60px;
}